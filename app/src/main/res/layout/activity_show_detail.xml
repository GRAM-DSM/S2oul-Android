<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".showDetail.ShowDetailActivity">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/showDetail_pic_iv" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" android:layout_marginTop="12dp"
            android:id="@+id/linearLayout3">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="가격: "
                android:fontFamily="@font/seoulnamsan_b"
                android:textSize="14dp" android:id="@+id/showDetail_tv"/>
        <TextView
                android:id="@+id/showDetail_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/seoulnamsan_b"
                android:textSize="14sp"/>
    </LinearLayout>
    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="1.0"
            android:id="@+id/toolbar3">
        <ImageView
                android:id="@+id/showDetail_cancel_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_cancel"
                android:layout_gravity="left" tools:layout_editor_absoluteY="16dp"
                tools:layout_editor_absoluteX="16dp"/>
        <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/ic_logo"
                android:layout_gravity="center"/>


    </androidx.appcompat.widget.Toolbar>
    <ImageView
            android:layout_width="160dp"
            android:layout_height="0dp" app:srcCompat="?attr/colorAccent"
            android:id="@+id/showDetail_pic_iv" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/toolbar3"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toTopOf="@+id/imageView5"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:fontFamily="@font/seoulnamsan_eb"
            android:textColor="#000000"
            android:id="@+id/showDetail_name_tv" app:layout_constraintStart_toEndOf="@+id/showDetail_pic_iv"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar3" android:layout_marginTop="40dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/showDetail_date_tv"
            android:fontFamily="@font/seoulnamsan_eb"
            android:textSize="14dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/showDetail_name_tv"
            app:layout_constraintStart_toEndOf="@+id/showDetail_pic_iv"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/showDetail_date_tv"
            app:layout_constraintStart_toEndOf="@+id/showDetail_pic_iv" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:id="@+id/linearLayout" android:layout_marginTop="12dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="연령: "
                android:fontFamily="@font/seoulnamsan_eb"
                android:textSize="14sp" android:textColor="#000000"/>
        <TextView
                android:id="@+id/showDetail_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/seoulnamsan_eb"
                android:textSize="14dp" tools:ignore="DuplicateIds"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
            android:id="@+id/showDetail_rv" app:layout_constraintTop_toBottomOf="@+id/imageView5"
            app:layout_constraintBottom_toTopOf="@+id/imageView4" android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>
    <ImageView
            android:layout_width="328dp"
            android:layout_height="0dp" app:srcCompat="@drawable/ic_line"
            android:id="@+id/imageView4" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="100dp" app:layout_constraintBottom_toBottomOf="parent"
    />
    <ImageView
            android:layout_width="328dp"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_line"
            android:id="@+id/imageView5" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/toolbar3"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
            app:layout_constraintStart_toEndOf="@+id/showDetail_pic_iv" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:id="@+id/linearLayout4">
        <TextView
                android:text="장소: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView"
                android:fontFamily="@font/seoulnamsan_b"/>
        <TextView
                android:layout_width="wrap_content"
                android:fontFamily="@font/seoulnamsan_b"
                android:layout_height="wrap_content" android:id="@+id/showDetail_place_tv"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/showDetail_pic_iv"
            android:layout_marginStart="8dp" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4" android:id="@+id/linearLayout2">
        <TextView
                android:text="러닝타임: "
                android:layout_width="wrap_content"
                android:fontFamily="@font/seoulnamsan_b"
                android:layout_height="wrap_content" android:id="@+id/textView3"/>
        <TextView
                android:layout_width="wrap_content"
                android:fontFamily="@font/seoulnamsan_b"
                android:layout_height="wrap_content" android:id="@+id/showDetail_time_tv"/>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/showDetail_place_layout"
            android:layout_width="0dp"
            android:layout_height="66dp" app:layout_constraintTop_toBottomOf="@+id/imageView4"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp">

        <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/showDetail_bottom_place_tv" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="0dp" android:textColor="#000000" android:fontFamily="@font/seoulnamsan_eb"/>
        <TextView
                android:text="("
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/scope1_tv" app:layout_constraintStart_toEndOf="@+id/showDetail_bottom_place_tv"
                android:layout_marginStart="8dp" android:layout_marginTop="0dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/showDetail_bottom_address_tv"
                app:layout_constraintTop_toBottomOf="@+id/showDetail_bottom_place_tv"
                app:layout_constraintStart_toStartOf="parent"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:id="@+id/showDetail_number_tv"
                app:layout_constraintTop_toBottomOf="@+id/showDetail_bottom_address_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars"
                android:id="@+id/showDetail_place_iv"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:text="1.7"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:id="@+id/showDetail_bottom_dis_tv" app:layout_constraintStart_toEndOf="@+id/scope1_tv"
                app:layout_constraintTop_toTopOf="parent" android:fontFamily="@font/seoulnamsan_b"
                android:layout_marginTop="2dp"/>
        <TextView
                android:text="km"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:id="@+id/scope_km_tv" app:layout_constraintStart_toEndOf="@+id/showDetail_bottom_dis_tv"
                app:layout_constraintTop_toTopOf="parent" android:fontFamily="@font/seoulnamsan_b"
                android:layout_marginTop="2dp"/>
        <TextView
                android:text=")"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/scope2_tv"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/scope_km_tv"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
            android:text="예매하기"
            android:background="@drawable/btn_ticketing"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:id="@+id/showDetail_ticketing_btn"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            app:layout_constraintBottom_toTopOf="@+id/imageView5"
            app:layout_constraintStart_toEndOf="@+id/showDetail_pic_iv" android:layout_marginStart="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            android:layout_marginBottom="16dp" android:layout_marginTop="16dp"
            android:fontFamily="@font/seoulnamsan_b" android:textColor="@color/colorPrimary"
            android:drawableStart="@drawable/ic_ticket" android:drawingCacheQuality="high"/>


</androidx.constraintlayout.widget.ConstraintLayout>