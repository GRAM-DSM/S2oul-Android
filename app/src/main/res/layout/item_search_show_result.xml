<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"

app:layout_constraintTop_toTopOf="parent"
app:layout_constraintBottom_toBottomOf="parent">
    <TextView
            android:text="위대한 쇼맨"
            android:textSize="15dp"
            android:textColor="#000"
            android:fontFamily="@font/seoulnamsan_eb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/searchResult_show_name_tv"
            android:layout_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
<TextView
        android:text="서울 소극장"
        android:fontFamily="@font/seoulnamsan_eb"
        android:layout_weight="1"
        android:textSize="13dp"
        android:layout_width="match_parent"
        android:layout_height="0dp" android:id="@+id/searchResult_show_place_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchResult_show_name_tv" android:layout_marginTop="4dp"/>
    <TextView
            android:text="뮤지컬"
            android:fontFamily="@font/seoulnamsan_eb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:id="@+id/searchResult_show_genre_tv" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp" app:layout_constraintTop_toBottomOf="@+id/searchResult_show_place_tv"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"/>
    <TextView
            android:text=" / "
            android:textSize="13dp"
            android:fontFamily="@font/seoulnamsan_eb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6" app:layout_constraintStart_toEndOf="@+id/searchResult_show_genre_tv"
            android:layout_marginTop="4dp" app:layout_constraintTop_toBottomOf="@+id/searchResult_show_place_tv"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="만 12세 이상"
            android:textSize="13dp"
            android:fontFamily="@font/seoulnamsan_eb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/searchDetail_show_age_tv" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/searchResult_show_place_tv"
            app:layout_constraintStart_toEndOf="@+id/textView6" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
