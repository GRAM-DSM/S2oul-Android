<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".InfoFragment">


    <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/info_radio_group" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.0">

    </FrameLayout>

    <RadioGroup
            android:id="@+id/info_radio_group"
            android:layout_width="226dp"
            android:layout_height="0dp"
            android:gravity="center_horizontal"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="24dp">
        <RadioButton
                android:text="공연"
                android:fontFamily="@font/seoulnamsan_b"
                android:button="@android:color/transparent"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="32dp"
                android:background="@drawable/radio_selector"
                android:id="@+id/info_show_radio"
                android:checked="true"
                android:textColor="@color/radio_text_selector"/>
        <RadioButton
                android:text="소극장"
                android:gravity="center"
                android:button="@android:color/transparent"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:fontFamily="@font/seoulnamsan_b"
                android:background="@drawable/radio_selector"
                android:id="@+id/info_place_radio"
                android:textColor="@color/radio_text_selector"/>
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>